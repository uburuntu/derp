# Environment configuration for Derp Telegram Bot
# Copy this file to .env and fill in your actual values

# Required: Environment type (dev or prod)
ENVIRONMENT=prod

# Required: Set to true when running in Docker
IS_DOCKER=true

# Required: Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Required: Gel (EdgeDB) database connection
GEL_INSTANCE=your_gel_instance_url_here
GEL_SECRET_KEY=your_gel_secret_key_here

# Required: Default LLM model to use
DEFAULT_LLM_MODEL=gemini-2.0-flash

# Required: OpenAI API key for AI responses
OPENAI_API_KEY=your_openai_api_key_here

# Required: Google API key for AI responses (now used by default)
GOOGLE_API_KEY=your_google_api_key_here

# Required: Additional Google API keys (comma-separated)
GOOGLE_API_EXTRA_KEYS=your_extra_google_api_keys_here

# Required: Paid Google API key
GOOGLE_API_PAID_KEY=your_paid_google_api_key_here

# Required: OpenRouter API key for alternative AI models
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Required: Logfire token for logging
LOGFIRE_TOKEN=your_logfire_token_here

# Optional: Admin user IDs (comma-separated)
# ADMIN_IDS=28006241

# Optional: RMBK user ID
# RMBK_ID=28006241

# Optional: Premium chat IDs (comma-separated)
# PREMIUM_CHAT_IDS=28006241,-1001174590460 